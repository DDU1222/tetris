/**index.wxss**/

/**展示区**/
.display-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 70%;
  background: #F2D7EE;
  width: 100%;
  padding: 16rpx;
  border: 10rpx solid #0E103D;
  box-sizing: border-box;
}

.display-block {
  display: flex;
  flex-direction: row;
  width: 60%;
  height: 100%;
  border: 4rpx solid #0E103D;
  padding: 2rpx;
}

.display-block .column{
  display: flex;
  flex-direction: column;
}

.unit {
  display: inline-block;
  width: 100%;
  border: 2rpx solid #F2D7EE;
  padding: 2rpx;
  background: rgba(0,0,0,0.1);
  position: relative;
  box-sizing: border-box;
}

.active {
  background: rgba(0,0,0,1);
}

.locked {
  background: rgba(0,0,0,1);
}

.unit::after {
  content: '';
  width: 60%;
  height: 60%;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid #F2D7EE;
}

.display-fraction {
  width: 40%;
  height: 100%;
}
/**操作区**/
.action-container {
  width: 100%;
  display: flex;
  height: 30%;
  background: #0E103D;
  justify-content: space-between;
  padding: 16rpx;
  box-sizing: border-box;
}

.act-btn {
  width: 120rpx;
  height: 120rpx;
  display: block;
  position: relative;
  text-align:center;
  line-height:120rpx;
  color:#fff;
  font-size: 24rpx;
  /* border: 1rpx solid #000; */
  border-radius: 50%;
  box-shadow: 0 3rpx 3rpx rgba(0,0,0,.2);
  background: #5a65f1;
}

.act-btn::before {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50%;
  box-shadow: inset 0 5rpx 10rpx hsla(0,0%,100%,.8);
}

.act-btn::after {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 50%;
  box-shadow: inset 0 -5rpx  10rpx rgba(0,0,0,.8);
}

.btn-change {
  width: 180rpx;
  height: 180rpx;
  text-align:center;
  line-height:180rpx;
  color:#fff;
  font-size: 34rpx;
}

.direction-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.act-btn-center {
  height: 340rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}